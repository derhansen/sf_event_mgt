<T3DataStructure>
    <meta type="array">
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <!-- Sheet: Settings -->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- View -->
                    <switchableControllerActions>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.list</numIndex>
                                        <numIndex index="1">Event->list</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.detail</numIndex>
                                        <numIndex index="1">Event->detail;Event->icalDownload</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.registration</numIndex>
                                        <numIndex index="1">Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>

                    <!-- Template Layout -->
                    <settings.templateLayout>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.templateLayout</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>DERHANSEN\SfEventMgt\Hooks\TemplateLayouts->user_templateLayout</itemsProcFunc>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.templateLayout>

                    <!-- Detail Pid -->
                    <settings.detailPid>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.detailPid</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.detailPid>

                    <!-- List Pid -->
                    <settings.listPid>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.listPid</label>
                            <displayCond>
                                <OR>
                                    <numIndex>FIELD:switchableControllerActions:=:Event->detail;Event->icalDownload</numIndex>
                                    <OR>
                                        <numIndex>FIELD:switchableControllerActions:=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </OR>
                                </OR>
                            </displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.listPid>

                    <!-- Registration Pid -->
                    <settings.registrationPid>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.registrationPid</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.registrationPid>

                    <!-- Display options -->
                    <settings.displayMode>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode.all</numIndex>
                                        <numIndex index="1">all</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode.future</numIndex>
                                        <numIndex index="1">future</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.displayMode.past</numIndex>
                                        <numIndex index="1">past</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.displayMode>

                    <!-- Order field -->
                    <settings.orderField>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderField</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderField.title</numIndex>
                                        <numIndex index="1">title</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderField.startdate</numIndex>
                                        <numIndex index="1">startdate</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderField.enddate</numIndex>
                                        <numIndex index="1">enddate</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.orderField>

                    <!-- Order direction -->
                    <settings.orderDirection>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.ascending</numIndex>
                                        <numIndex index="1">asc</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.descending</numIndex>
                                        <numIndex index="1">desc</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.orderDirection>

                    <!-- Top event -->
                    <settings.topEventRestriction>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.topEventRestriction</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.none</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.exceptTopEvents</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.onlyTopEvents</numIndex>
                                        <numIndex index="1">2</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.topEventRestriction>
					
                    <!-- Query Limit -->
                    <settings.queryLimit>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.queryLimit</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>input</type>
                                <eval>num</eval>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </settings.queryLimit>

                    <!-- category -->
                    <settings.category>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.category</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>select</type>
                                <renderMode>tree</renderMode>
                                <treeConfig>
                                    <parentField>parent</parentField>
                                    <appearance>
                                        <expandAll>TRUE</expandAll>
                                        <showHeader>TRUE</showHeader>
                                    </appearance>
                                </treeConfig>
                                <foreign_table>tx_sfeventmgt_domain_model_category</foreign_table>
                                <foreign_table_where> AND (tx_sfeventmgt_domain_model_category.sys_language_uid = 0 OR tx_sfeventmgt_domain_model_category.l10n_parent = 0) ORDER BY tx_sfeventmgt_domain_model_category.sorting ASC</foreign_table_where>
                                <size>10</size>
                                <autoSizeMax>10</autoSizeMax>
                                <minitems>0</minitems>
                                <maxitems>99</maxitems>
                            </config>
                        </TCEforms>
                    </settings.category>

                    <!-- Storage page -->
                    <settings.location>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.location</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tx_sfeventmgt_domain_model_location</allowed>
                                <size>1</size>
                                <maxitems>50</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.location>

                    <!-- Storage page -->
                    <settings.storagePage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.storagePage</label>
                            <displayCond>
                                <AND>
                                    <numIndex>FIELD:switchableControllerActions:!=:Event->detail;Event->icalDownload</numIndex>
                                    <AND>
                                        <numIndex>FIELD:switchableControllerActions:!=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</numIndex>
                                    </AND>
                                </AND>
                            </displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>3</size>
                                <maxitems>50</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.storagePage>

                    <!-- disable overrideDemand -->
                    <settings.disableOverrideDemand>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.disableOverrideDemand</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.disableOverrideDemand>

                    <!-- Required fields for registration -->
                    <settings.registration.requiredFields>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.requiredFields</label>
                            <displayCond>FIELD:switchableControllerActions:=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</displayCond>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.registration.requiredFields>

                </el>
            </ROOT>
        </sDEF>

        <!-- Sheet: Notification -->
        <notification>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_tab.notification</sheetTitle>
                    <displayCond>FIELD:sDEF.switchableControllerActions:=:Event->registration;Event->saveRegistration;Event->saveRegistrationResult;Event->confirmRegistration</displayCond>
                </TCEforms>
                <type>array</type>
                <el>

                    <!-- Sender e-mail address -->
                    <settings.notification.senderEmail>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.sender_email</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.senderEmail>

                    <!-- Sender name -->
                    <settings.notification.senderName>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.sender_name</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.senderName>

                    <!-- Admin e-mail address -->
                    <settings.notification.adminEmail>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.admin_email</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.adminEmail>

                    <!-- New registration - subject of user e-mail -->
                    <settings.notification.registrationNew.userSubject>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.registration_new_user_subject</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.registrationNew.userSubject>

                    <!-- New registration - subject of admin e-mail -->
                    <settings.notification.registrationNew.adminSubject>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.registration_new_admin_subject</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.registrationNew.adminSubject>

                    <!-- Registration confirmed - subject of user e-mail -->
                    <settings.notification.registrationConfirmed.userSubject>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.registration_confirmed_user_subject</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.registrationConfirmed.userSubject>

                    <!-- Registration confirmed - subject of admin e-mail -->
                    <settings.notification.registrationConfirmed.adminSubject>
                        <TCEforms>
                            <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_notification.registration_confirmed_admin_subject</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.notification.registrationConfirmed.adminSubject>

                </el>
            </ROOT>
        </notification>
    </sheets>
</T3DataStructure>